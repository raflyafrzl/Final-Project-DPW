<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %> </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Roboto:wght@700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style-register.css" />
  </head>
  <body>

  <section class="register">
    <div class="container">
      <div class="row justify-content-center">
      <div class="col-lg-7">
        <div class="card p-4 shadow-lg rounded-lg border-0 my-4">
          <img src="image/signup (1).png" alt="Register" class="d-block mx-auto">
            <h4 class="mb-3 text-center">W E L C O M E</h4>
            <% if (msg.length !== 0) { %>
              <div class="alert alert-danger text-center" role="alert">
                  <%= msg %> 
              </div>
            <% } %>
              <form class="register" method="POST" action="/register">
                <div class="mb-4 mx-5">
                  <input type="nama" class="form-control rounded-pill mb-3" placeholder="Name" name="username" autocomplete="off">
                </div>
                <div class="mb-4 mx-5">
                  <input type="email" class="form-control rounded-pill mb-3" placeholder="Email Address" name="email" autocomplete="off">
                </div>
                <div class="mb-4 mx-5">
                  <input type="password" class="form-control rounded-pill mb-3" placeholder="Password" name="password" autocomplete="off">
                </div>
                <div class="mb-4 mx-5">
                  <input type="password" class="form-control rounded-pill mb-3" placeholder="Repeat Password" name="repeatpass" autocomplete="off">
                </div>
                <div class="mb-4">
                  <div class="form-check"> 
                    </label>
                    <a href="" class="float-end small">Forgot Password?</a>
                  </div>
                </div>
                <div class="d-grid mx-5">
                  <button type="submit" class="btn btn-secondary rounded-pill btn-block mb-4">
                    Register
                  </button>
                </div>
              </form>    
          <p class="small text-center my-4"><a href="/login">Already Have Account</a></p>
            <hr>
        </div>          
      </div>
    </div>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path
      fill="#087f5b"
      fill-opacity="1"
      d="M0,64L0,224L1440,224L1440,320L0,320L0,320Z"
    ></path>
  </svg>
</section>

<!-- Footer -->

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>